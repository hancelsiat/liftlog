# Server Configuration
PORT=10000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/liftlog

# JWT Authentication
JWT_SECRET=generate_a_long_random_secret_here
JWT_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Logging
LOG_LEVEL=info

# Optional: Additional Security
RATE_LIMIT_WINDOW_MS=15*60*1000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Email Service (if implemented)
# EMAIL_SERVICE=
# EMAIL_USER=
# EMAIL_PASS=